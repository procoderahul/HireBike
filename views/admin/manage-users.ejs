<div class="container mt-5">
    <h2 class="text-center mb-4">Registered Users</h2>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  
