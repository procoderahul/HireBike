<div class="container my-5">
  <h2>Manage Bikes</h2>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Model</th>
        <th>Price Per Day</th>
        <th>Image</th>
        <th>Available</th> <!-- New column -->
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% bikes.forEach(bike => { %>
        <tr>
          <td><%= bike.model %></td>
          <td>â‚¹<%= bike.pricePerDay %></td>
          <td><img src="/uploads/<%= bike.image %>" alt="<%= bike.model %>" width="100"></td>
          <td>
            <form action="/admin/toggle-availability/<%= bike._id %>" method="POST">
              <button type="submit" class="btn <%= bike.available ? 'btn-success' : 'btn-danger' %>">
                <%= bike.available ? 'Yes' : 'No' %>
              </button>
            </form>
          </td>
          <td>
            <a href="/admin/edit-bike/<%= bike._id %>" class="btn btn-warning">Edit</a>
            
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

