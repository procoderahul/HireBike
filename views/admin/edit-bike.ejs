      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link btn btn-danger text-white" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container my-5">
  <div class="card shadow-lg">
    <div class="card-header bg-warning text-white">
      <h2 class="mb-0">Edit Bike</h2>
    </div>
    <div class="card-body">
      <form action="/admin/edit-bike/<%= bike._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="model" class="form-label">Bike Model</label>
          <input type="text" class="form-control" id="model" name="model" value="<%= bike.model %>" required>
        </div>
        <div class="mb-3">
          <label for="pricePerDay" class="form-label">Price Per Day</label>
          <input type="number" class="form-control" id="pricePerDay" name="pricePerDay" value="<%= bike.pricePerDay %>" required>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Bike Image</label>
          <div class="mb-2">
            <img src="/uploads/<%= bike.image %>" alt="<%= bike.model %>" class="img-thumbnail" style="width: 150px;">
          </div>
          <input type="file" class="form-control" id="image" name="image">
          <small class="text-muted">Leave this field empty if you do not want to change the image.</small>
        </div>
        <button type="submit" class="btn btn-success">Update Bike</button>
      </form>
    </div>
  </div>
</div>

