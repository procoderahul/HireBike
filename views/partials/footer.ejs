    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Ensure the page takes full height */
        html, body {
            height: 100%;
        }

        /* Main content area should take up available space */
        .content {
            flex: 1 0 auto;
        }

        /* Sticky footer styling */
        .footer {
