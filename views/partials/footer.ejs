        .footer .follow-me a,
        .footer .contact-info a {
            color: white;
            text-decoration: none;
            margin-right: 10px;
        }

        .footer .social-links a:hover,
        .footer .follow-me a:hover,
        .footer .contact-info a:hover {
            color: #adb5bd;
        }

        .footer .contact-info i, 
        .footer .social-links i {
            margin-right: 8px;
        }

        /* Footer spacing */
        .footer div {
            margin-bottom: 15px;
        }

        .footer p {
            margin: 0;
        }
    </style>
</head>
