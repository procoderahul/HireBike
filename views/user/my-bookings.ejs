<div class="container">
  <h2>My Bookings</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Bike Model</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Destination</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(booking => { 
        const now = new Date();
        const startDate = new Date(booking.startDate);
      %>
        <tr>
          <td><%= booking.bikeId.model %></td>
          <td><%= startDate.toDateString() %></td>
          <td><%= new Date(booking.endDate).toDateString() %></td>
          <td><%= booking.destination %></td>
          <td>â‚¹<%= booking.totalPrice %></td>
          <td><%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %></td>
          <td>
            <% if (booking.status === 'rejected') { %>
              <span class="badge bg-danger">Rejected</span>
            <% } else if (booking.status === 'cancelled') { %>
              <span class="badge bg-secondary">Cancelled</span>
            <% } else if (booking.status === 'accepted') { %>
              <% if (now < startDate) { %>
                <form action="/user/cancel-booking/<%= booking._id %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                </form>
              <% } else { %>
                <span class="badge bg-success">Accepted</span>
              <% } %>
            <% } else if (booking.status === 'pending') { %>
              <span class="badge bg-warning">Pending</span>
            <% } %>
          </td>
          
        </tr>
      <% }) %>
    </tbody>
  </table>
  
