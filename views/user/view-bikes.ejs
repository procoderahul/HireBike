<div class="container my-5">
  <h2>Available Bikes</h2>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Model</th>
        <th>Price Per Day</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% bikes.forEach(bike => { %>
        <tr>
          <td><%= bike.model %></td>
          <td>â‚¹<%= bike.pricePerDay %></td>
          <td><img src="/uploads/<%= bike.image %>" alt="<%= bike.model %>" width="100"></td>
          <td>
            <% if (bike.available) { %>
              <form action="/user/book-bike/<%= bike._id %>" method="GET">
                <button type="submit" class="btn btn-success">Book Now</button>
              </form>
            <% } else { %>
              <button class="btn btn-secondary" disabled>Unavailable</button>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

